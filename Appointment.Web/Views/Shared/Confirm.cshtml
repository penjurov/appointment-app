@using Appointment.Web.Infrastructure.Bundles

<div id="confirm-wrapper">
    <div v-bind:class="{ modalVisible: isVisible }" class="modal custom-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" v-on:click="cancelHandler">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <template v-if="header && header != ''">
                        <div class="confirm-title normal" v-html="header" v-bind:class="{ center: isCentered }"></div>
                        <div v-if="title != ''" class="confirm-content normal" v-html="title" v-bind:class="{ center: isCentered }"></div>
                    </template>
                    <template v-else>
                        <div v-if="title && title != ''" class="confirm-title normal" v-html="title"></div>
                    </template>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn confirm" v-on:click="okHandler">{{okButton}}</button>
                    <button type="button" class="btn cancel" v-on:click="cancelHandler">{{cancelButton}}</button>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.RenderScripts("~/Scripts/Shared/confirm.js")